{
  "compilerOptions": {
    "target": "es2021",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // "noImplicitReturns": true,
    "noEmitOnError": false,
    "noEmit": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "module": "es6",
    "experimentalDecorators": true,
    "paths": {
      "shareyourtraveltips-web/tests/*": ["tests/*"],
      "shareyourtraveltips-web/*": ["app/*"],
      "*": ["types/*"]
    },
    "skipLibCheck": true,
    "types": ["googlemaps"]
  },
  "include": [
    "app/**/*",
    "tests/**/*",
    "types/**/*",
    "types/ember-power-calendar/*",
    "types/ember-changeset/*"
  ]
}
