<div class='bg-orange-600 pb-32 {{if @isSticky "fixed left-0 right-0"}}'>
  <nav
    class='bg-orange-600 border-b border-orange-300 border-opacity-25 lg:border-none'
  >
    <div class='max-w-7xl mx-auto px-2 sm:px-4 lg:px-8'>
      <div
        class='relative h-16 flex items-center justify-between lg:border-b lg:border-orange-400 lg:border-opacity-25'
      >
        <div class='px-2 flex items-center lg:px-0'>
          <div class='flex-shrink-0'>
            {{#if this.session.isAuthenticated}}
              <LinkTo @route='authenticated.trips'>
                <h1 class='text-white font-semibold'>ShareYourTravel.tips</h1>
              </LinkTo>
            {{else}}
              <LinkTo @route='index'>
                <h1 class='text-white font-semibold'>ShareYourTravel.tips</h1>
              </LinkTo>
            {{/if}}
          </div>
          <div class='hidden lg:block lg:ml-10'>
            <div class='flex space-x-4'>
              {{#if this.session.isAuthenticated}}
                {{#each this.menuItems as |item|}}
                  <LinkTo
                    @route={{item.route}}
                    @current-when={{item.currentWhen}}
                    @activeClass='bg-orange-700 text-white'
                    class='text-white hover:bg-orange-500 hover:bg-opacity-75 rounded-md py-2 px-3 text-sm font-medium'
                  >
                    {{t item.title}}
                  </LinkTo>
                {{/each}}
              {{/if}}
            </div>
          </div>
        </div>

        <div class='flex lg:hidden'>
          <!-- Mobile menu button -->
          <button
            type='button'
            class='bg-orange-600 p-2 rounded-md inline-flex items-center justify-center text-orange-200 hover:text-white hover:bg-orange-500 hover:bg-opacity-75 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-orange-600 focus:ring-white'
            aria-controls='mobile-menu'
            aria-expanded='false'
            {{on 'click' this.toggleMobileMenu}}
          >
            <span class='sr-only'>Open main menu</span>
            <FaIcon
              @icon={{this.mobileMenuIcon}}
              class='text-3xl text-white w-7'
            />
          </button>
        </div>
        <div class='hidden lg:block lg:ml-4'>
          {{#if this.session.isAuthenticated}}
            <span class='text-white py-2 px-3 text-sm font-medium italic'>
              {{t 'menu.welcome_message' name=this.currentUser.user.firstName}}
            </span>

            <LinkTo
              @route='logout'
              @activeClass='bg-orange-700 text-white'
              class='text-white hover:bg-orange-500 hover:bg-opacity-75 rounded-md py-2 px-3 text-sm font-medium'
            >
              {{t 'menu.logout'}}
            </LinkTo>
          {{else}}
            <LinkTo
              @route='login'
              class='text-orange-700 bg-white hover:bg-orange-500 hover:bg-opacity-75 rounded-md py-2 px-3 text-sm font-medium'
            >
              {{t 'menu.login'}}
            </LinkTo>
          {{/if}}
        </div>

      </div>
    </div>

    {{#if this.isMobileMenuOpen}}
      <div class='lg:hidden' id='mobile-menu'>
        <div class='px-2 pt-2 pb-3 space-y-1'>

          {{#each this.menuMobileItems as |item|}}
            <LinkTo
              @route={{item.route}}
              @current-when={{item.currentWhen}}
              @activeClass='bg-orange-700 text-white'
              class='bg-orange-700 text-white block rounded-md py-2 px-3 text-base font-medium'
            >
              {{t item.title}}
            </LinkTo>
          {{/each}}

        </div>
      </div>
    {{/if}}
  </nav>
  <header class='py-5'>
    <div
      class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-white flex justify-between'
    >
      <h1 class='text-3xl font-bold text-white'>{{@title}}</h1>
    </div>
  </header>
</div>