<div class='relative mb-1'>
  <label for={{@id}} class='block text-sm font-medium text-gray-700'>
    {{@label}}
  </label>
  {{#if this.isTextarea}}
    <Textarea
      id={{@id}}
      rows='4'
      autofocus={{@autofocus}}
      tabindex='{{@tabindex}}'
      placeholder={{@placeholder}}
      class='mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none sm:text-sm
        {{this.borderClasses}}'
      @value={{@value}}
    />
  {{else}}
    <Input
      id={{@id}}
      @type={{@type}}
      placeholder={{@placeholder}}
      class='mt-1 block w-full border rounded-md shadow-sm py-2 px-3 focus:outline-none sm:text-sm
        {{this.borderClasses}}'
      @checked={{@checked}}
      autocomplete={{@autocomplete}}
      @disabled={{@disabled}}
      autofocus={{@autofocus}}
      tabindex='{{@tabindex}}'
      @value={{@value}}
      pattern={{@pattern}}
    />
  {{/if}}
  {{#if this.hasError}}
    <div class='-mb-5 translate-y-1'>
      <InputErrorMessage @message={{t this.errorMessage}} />
    </div>
  {{/if}}
</div>