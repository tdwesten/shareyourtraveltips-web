<div
  class='col-span-1 bg-white rounded-lg border border-gray-300'
  {{did-update this.setDefaultImage @changeset}}
>
  {{#if this.hasError}}
    <InputErrorMessage @message={{t this.errorMessage}} />
  {{/if}}
  <div
    class='bg-cover bg-gray-300 overflow-hidden flex-1 aspect-video p-6 flex justify-end rounded-t relative'
    style={{this.coverPhotoStyle}}
  >

    {{#if this.hasMultipleImages}}
      <button
        type='button'
        class='absolute left-5 top-1/2 -translate-y-1/2 cursor-pointer'
        {{on 'click' (action this.previousImage)}}
      >
        <FaIcon
          @icon='arrow-left'
          class='text-white transform hover:scale-110 text-2xl'
        />
      </button>
      <button
        type='button'
        class='absolute right-5 top-1/2 -translate-y-1/2 cursor-pointer'
        {{on 'click' (action this.nextImage)}}
      >
        <FaIcon
          @icon='arrow-right'
          class='text-white transform hover:scale-110 text-2xl'
        />
      </button>
    {{/if}}
    {{#if this.noResults}}
      <div class='flex items-center justify-center w-full'>
        <FaIcon @icon='image' class='text-gray-500 text-4xl' />
      </div>
    {{/if}}
    {{#if this.loading}}
      <div class='flex items-center justify-center w-full'>
        <FaIcon @icon='spinner' class='text-gray-500 text-4xl animate-spin' />
      </div>
    {{/if}}
  </div>
  <div class='w-full flex items-center justify-between px-6 py-5 gap-4'>
    <Input
      id='title'
      type='search'
      placeholder={{t 'placeholder.search_for_cover_photo'}}
      autocomplete='off'
      class='mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-orange-500 focus:border-orange-500 sm:text-sm'
      @value={{this.searchQuery}}
      {{on 'keyup' (action this.searchResults)}}
    />
  </div>
</div>