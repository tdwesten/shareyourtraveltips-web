<form
  {{on 'submit' (action this.addNewTrip)}}
  class='grid grid-cols-6 gap-6 w-full'
>
  <div class='col-span-6'>
    <ValidatedInput
      @changeset={{this.changeset}}
      @id='title'
      @type='text'
      @label='{{t "label.title"}}'
      @value='{{this.changeset.title}}'
      @placeholder={{t 'placeholder.new_trip_title'}}
    />
  </div>
  <div class='col-span-6'>
    <label for='password' class='block text-sm font-medium text-gray-700'>
      {{t 'label.description'}}
    </label>
    <Textarea
      id='description'
      rows='4'
      placeholder={{t 'placeholder.new_trip_description'}}
      class='mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-orange-500 focus:border-orange-500 sm:text-sm'
      @value={{@model.description}}
    />
  </div>
  <div class='col-span-6'>
    <label
      for='public'
      class='text-sm font-medium text-gray-700 flex items-center'
    >
      <Input
        id='public'
        @type='checkbox'
        placeholder={{t 'placeholder.public'}}
        class='focus:outline-none focus:ring-orange-500 focus:border-orange-500 rounded-sm mr-2'
        @checked={{@model.public}}
      />
      {{t 'label.public'}}
    </label>

  </div>
  <div class='col-span-6'>
    <label for='' class='block text-sm mb-1 font-medium text-gray-700'>
      {{t 'label.cover_photo'}}
    </label>

    <UnsplashImageSearch
      @onSelect={{action this.setCoverPhoto}}
      @imageUrl={{@model.unsplashPhotoUrl}}
    />

  </div>
  <div class='col-span-6 flex flex-row-reverse'>
    {{log this.changeset}}
    <Button @type='submit' @disabled={{this.changeset.isInvalid}}>
      {{t this.getSuccesButtonText}}
    </Button>

    <SecondaryButton @type='button' class='mr-3' {{on 'click' @onCancel}}>
      {{t 'cancel'}}
    </SecondaryButton>

  </div>
</form>