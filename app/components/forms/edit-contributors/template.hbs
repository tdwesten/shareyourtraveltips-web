{{#if @model}}
  <Form
    @model={{@model}}
    @onSubmit={{this.addNewTrip}}
    @validations={{this.validations}}
    class='grid w-full grid-cols-6 gap-6'
    as |form|
  >
    {{#each form.changeset.contributors as |contributor|}}
      {{contributor.firstName}}
    {{/each}}
    <div class='col-span-6'>
      <ValidatedInput
        @label={{t 'label.title'}}
        @id='title'
        @type='text'
        @placeholder={{t 'placeholder.new_trip_title'}}
        @autocomplete='off'
        @changeset={{form.changeset}}
        @value={{form.changeset.title}}
      />
    </div>
    <div class='col-span-6'>
      <ValidatedInput
        @label={{t 'label.description'}}
        @id='description'
        @type='textarea'
        @placeholder={{t 'placeholder.new_trip_description'}}
        @autocomplete='off'
        @changeset={{form.changeset}}
        @value={{form.changeset.description}}
      />
    </div>

    <div
      class='col-span-6 flex items-center mt-3 py-3 border-t border-gray-300 justify-between'
    >

      <div>
        <SecondaryButton
          @type='button'
          tabindex='5'
          class='mr-3'
          {{on 'click' @onCancel}}
        >
          {{t 'cancel'}}
        </SecondaryButton>
        <Button @type='submit' tabindex='4'>
          {{t this.getSuccesButtonText}}
        </Button>
      </div>
    </div>
  </Form>
{{/if}}