<div
  class='shadow rounded-lg relative group bg-white flex flex-col overflow-hidden'
>
  <div
    class='bg-cover bg-gray-300 overflow-hidden flex-1 aspect-video p-3 flex justify-between
      {{this.loadingClass}}'
    style={{this.coverPhotoStyle}}
  >
    <div class='bg-white w-8 h-8 rounded-full flex items-center justify-center'>
      <FaIcon
        @icon={{this.getPublicStatusIcon}}
        class='text-orange-500 transform text-xs'
      />
    </div>
  </div>
  <div class='px-5 py-6'>
    <h3 class='text-lg font-medium'>
      <span class='absolute inset-0' aria-hidden='true'></span>
      {{@model.title}}
    </h3>
    <p class='mt-2 text-sm text-gray-500'>
      {{@model.description}}
    </p>
  </div>
</div>