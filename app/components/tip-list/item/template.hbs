<li
  class='px-3 py-2 cursor-pointer flex items-start border-b leading-tight
    {{if @model.isHovered "bg-gray-100" "bg-white"}}'
  onmouseenter={{action this.toggleHoverState}}
  onmouseleave={{action this.toggleHoverState}}
  ...attributes
>
  <span
    class='w-9 h-9 flex-shrink-0 mt-1
      {{this.backgroundColor}}
      text-white flex items-center justify-center rounded-full'
  >
    <FaIcon @icon={{this.getIcon}} />
  </span>
  <span class='flex-1 overflow-hidden pl-3'>
    <span class='font-medium text-orange-500 block text-base font-headings'>
      {{@model.title}}
    </span>
    <span class='text-sm block text-gray-600 truncate text-ellipsis my-0.5'>
      {{@model.description}}
    </span>
    {{#if (and this.tripHasContributors this.getUserFullName)}}
      <span class='text-xs block text-gray-400 truncate text-ellipsis my-0.5'>
        {{t 'tip_by' name=this.getUserFullName}}
      </span>
    {{/if}}
  </span>
</li>