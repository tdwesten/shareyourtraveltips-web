{{page-title (t 'page_title.register')}}

<AppHeader />

<PageWrapper>
  <div class='grid grid-cols-9 -m-6'>

    <div
      class='col-span-5 bg-cover flex items-end bg-gray-300 overflow-hidden rounded-l-lg'
      style="background-image: url('assets/images/john-o-nolan-6f_ANCcbj3o-unsplash.jpg');"
    >
      <span class='text-xs p-3 bg-white bg-opacity-30 rounded-tr'>
        Photo by
        <a
          href='https://unsplash.com/@johnonolan?utm_source=unsplash&utm_medium=referral&utm_content=creditCopyText'
        >John O'Nolan</a>
        on
        <a
          href='https://unsplash.com/s/photos/norway-travel?utm_source=unsplash&utm_medium=referral&utm_content=creditCopyText'
        >Unsplash</a></span>

    </div>
    <div class='py-16 px-5 col-span-4 flex items-center'>

      <form
        {{on 'submit' this.register}}
        class='grid grid-cols-6 gap-6 w-full px-6'
      >
        <div class='col-span-6'>
          <h1 class='text-3xl font-bold py-3'>{{t 'header_title.register'}}</h1>
          <p>{{t 'register_message'}}</p>
        </div>
        <div class='col-span-3'>
          <ValidatedInput
            @changeset={{this.changeset}}
            @id='first_name'
            @label={{t 'label.first_name'}}
            @type='text'
            @placeholder={{t 'placeholder.first_name'}}
            @autocomplete='given-name'
            @autofocus={{true}}
            @value={{this.changeset.first_name}}
          />
        </div>
        <div class='col-span-3'>
          <ValidatedInput
            @changeset={{this.changeset}}
            @id='last_name'
            @label={{t 'label.last_name'}}
            @type='text'
            @placeholder={{t 'placeholder.last_name'}}
            @autocomplete='family-name'
            @autofocus={{true}}
            @value={{this.changeset.last_name}}
          />
        </div>
        <div class='col-span-6'>
          <ValidatedInput
            @changeset={{this.changeset}}
            @id='email'
            @label={{t 'label.email'}}
            @type='email'
            @placeholder={{t 'placeholder.email'}}
            @autocomplete='email'
            @autofocus={{true}}
            @value={{this.changeset.email}}
          />
        </div>
        <div class='col-span-6'>
          <ValidatedInput
            @changeset={{this.changeset}}
            @id='password'
            @label={{t 'label.password'}}
            @type='password'
            @placeholder={{t 'placeholder.password'}}
            @autocomplete='new-password'
            @autofocus={{true}}
            @value={{this.changeset.password}}
          />
        </div>
        <div
          class='col-span-6 flex justify-between flex-row-reverse border-t border-gray-200 pt-4'
        >
          <Button @type='submit' @disabled={{this.changeset.isInvalid}}>
            {{t 'register'}}
          </Button>
          <SecondaryButton {{on 'click' this.toLogin}}>
            {{t 'login'}}
          </SecondaryButton>
        </div>
      </form>
    </div>
  </div>
</PageWrapper>