{{page-title (t 'page_title.register-success')}}

<AppHeader />

<PageWrapper>
  <div class='grid grid-cols-9 -m-6'>

    <div
      class='col-span-5 bg-cover flex items-end bg-gray-300 overflow-hidden rounded-l-lg'
      style="background-image: url('assets/images/john-o-nolan-6f_ANCcbj3o-unsplash.jpg');"
    >
      <span class='text-xs p-3 bg-white bg-opacity-30 rounded-tr'>
        Photo by
        <a
          href='https://unsplash.com/@johnonolan?utm_source=unsplash&utm_medium=referral&utm_content=creditCopyText'
        >John O'Nolan</a>
        on
        <a
          href='https://unsplash.com/s/photos/norway-travel?utm_source=unsplash&utm_medium=referral&utm_content=creditCopyText'
        >Unsplash</a></span>

    </div>
    <div class='py-16 px-5 col-span-4 flex items-center'>

      <form
        {{on 'submit' this.register}}
        class='grid grid-cols-6 gap-6 w-full px-6'
      >
        <div class='col-span-6'>
          <h1 class='text-3xl font-bold py-3'>{{t 'header_title.register'}}</h1>
          <p>{{t 'register_message'}}</p>
        </div>
        <div class='col-span-3'>
          <label
            for='first_name'
            class='block text-sm font-medium text-gray-700'
          >
            {{t 'label.first_name'}}
          </label>
          <Input
            id='first_name'
            @type='text'
            placeholder={{t 'placeholder.first_name'}}
            autocomplete='given-name'
            autofocus
            tabindex='1'
            class='mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-orange-500 focus:border-orange-500 sm:text-sm'
            @value={{this.user.first_name}}
          />
        </div>
        <div class='col-span-3'>
          <label
            for='last_name'
            class='block text-sm font-medium text-gray-700'
          >
            {{t 'label.last_name'}}
          </label>
          <Input
            id='last_name'
            @type='text'
            placeholder={{t 'placeholder.last_name'}}
            autocomplete='family-name'
            tabindex='2'
            class='mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-orange-500 focus:border-orange-500 sm:text-sm'
            @value={{this.user.last_name}}
          />
        </div>
        <div class='col-span-6'>
          <label for='email' class='block text-sm font-medium text-gray-700'>
            {{t 'label.email'}}
          </label>
          <Input
            id='email'
            @type='text'
            tabindex='3'
            placeholder={{t 'placeholder.email'}}
            autocomplete='email'
            class='mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-orange-500 focus:border-orange-500 sm:text-sm'
            @value={{this.user.email}}
          />
        </div>
        <div class='col-span-6'>

          <label for='password' class='block text-sm font-medium text-gray-700'>
            {{t 'label.password'}}
          </label>

          <Input
            id='password'
            @type='password'
            tabindex='4'
            pattern='(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*_=+-]).{8,16}'
            autocomplete='new-password'
            placeholder={{t 'placeholder.password'}}
            class='mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none sm:text-sm valid:border-green-500 valid:ring-green-500 invalid:border-red-500 invalid:ring-red-500'
            @value={{this.user.password}}
          />
        </div>
        <div
          class='col-span-6 flex justify-between border-t border-gray-200 pt-4'
        >
          <SecondaryButton tabindex='6'>{{t 'login'}}</SecondaryButton>
          <Button @type='submit' tabindex='5'>{{t 'register'}}</Button>
        </div>
      </form>
    </div>
  </div>
</PageWrapper>