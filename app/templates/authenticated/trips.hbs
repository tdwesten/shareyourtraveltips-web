{{page-title (t 'page_title.trips')}}

<AppHeader @title={{t 'header_title.trips'}} />

<PageWrapper>
  <h3 class='text-xl font-medium text-gray-800 mb-3'>{{t
      'heading.your_trips'
    }}</h3>
  <div class='grid grid-cols-3 gap-6 mb-6'>
    <EmptyTripCard {{on 'click' (action this.openSlideOver)}} />

    {{#each @model.trips as |trip|}}
      <LinkTo
        @route='authenticated.trip'
        @model={{trip}}
        class='hover:scale-105 transition-transform duration-200'
      >
        <TripCard @model={{trip}} />
      </LinkTo>
    {{/each}}
  </div>

  <h3 class='text-xl font-medium text-gray-800 mb-3'>
    {{t 'heading.trips_contributed_to'}}
  </h3>

  <div class='grid grid-cols-3 gap-6 mt-3'>
    {{log @model}}
    {{#each @model.tripsContributedTo as |trip|}}
      <LinkTo
        @route='authenticated.trip'
        @model={{trip}}
        class='hover:scale-105 transition-transform duration-200'
      >
        <TripCard @model={{trip}} />
      </LinkTo>
    {{/each}}
  </div>
</PageWrapper>

{{#ember-wormhole to='slide-over'}}
  <Forms::EditTrip
    @onSuccess={{action this.closeSlideOver}}
    @onCancel={{action this.closeSlideOverOnCancel}}
    @model={{@model.newTrip}}
  />
{{/ember-wormhole}}